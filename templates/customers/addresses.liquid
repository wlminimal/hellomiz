<div class="account-address-section">
  <div class="account-hero-block">
    <div class="account-hero-header-block">
      <h1 class="account-header-text"><span class="text-span-12">Your Addresses</span></h1>
    </div>
  </div>
  <div class="account-content-block">
    <div class="account-link-list">
      <a href="/account" class="account-link">Account Details</a>
      <a href="/account/addresses" class="account-link">Addresses</a>
      <a href="/account/logout" class="account-link">Sign out</a>
    </div>
    <div class="div-block-63">
      <div class="text-block-36"> My Account </div>
      <button type="button" class="add-address-button w-button address-new-toggle">{{ 'customer.addresses.add_new' | t }}</button>
    </div> 

  <p class="center">
    <a href="/account">{{ 'customer.account.return' | t }}</a>
  </p>

  <div id="AddressNewForm" class="hide">
    {% form 'customer_address', customer.new_address %}
    <div class="text-block-36">{{ 'customer.addresses.add_new' | t }}</div>

    <label class="field-label-2" for="AddressFirstNameNew">
      {{ 'customer.addresses.first_name' | t }}
    </label>
    <input type="text"
           class="w-input"
           name="address[first_name]"
           id="AddressFirstNameNew"
           value="{{ form.first_name }}"
           autocapitalize="words"
           required="">

    <label class="field-label-2" for="AddressLastNameNew">
      {{ 'customer.addresses.last_name' | t }}
    </label>
    <input type="text"
           class="w-input"
           name="address[last_name]"
           id="AddressLastNameNew"
           value="{{ form.last_name }}"
           autocapitalize="words"
           required="">

    <label class="field-label-2" for="AddressCompanyNew">
      {{ 'customer.addresses.company' | t }}
    </label>
    <input type="text"
           class="w-input" 
           name="address[company]"
           id="AddressCompanyNew"
           value="{{ form.company }}"
           autocapitalize="words">

    <label class="field-label-2" for="AddressAddress1New">
      {{ 'customer.addresses.address1' | t }}
    </label>
    <input type="text"
           class="w-input"
           name="address[address1]"
           id="AddressAddress1New"
           value="{{ form.address1 }}"
           autocapitalize="words"
           required="">

    <label class="field-label-2" for="AddressAddress2New">
      {{ 'customer.addresses.address2' | t }}
    </label>
    <input type="text"
           class="w-input"
           name="address[address2]"
           id="AddressAddress2New"
           value="{{ form.address2 }}"
           autocapitalize="words">

    <label class="field-label-2" for="AddressCityNew">
      {{ 'customer.addresses.city' | t }}
    </label>
    <input type="text"
           class="w-input"
           name="address[city]"
           id="AddressCityNew"
           value="{{ form.city }}"
           autocapitalize="words"
           required="">

    <label class="field-label-2" for="AddressCountryNew">
      {{ 'customer.addresses.country' | t }}
    </label>
    <select
      name="address[country]"
      class="w-select"
      id="AddressCountryNew"
      data-default="{{ form.country }}"
      required="">
      {{ country_option_tags }}
    </select>

    <div id="AddressProvinceContainerNew" style="display: none">
      <label class="field-label-2" for="AddressProvinceNew">
        {{ 'customer.addresses.province' | t }}
      </label>
      <select
        class="w-select"
        name="address[province]"
        id="AddressProvinceNew"
        data-default="{{ form.province }}"
        required="">
      </select>
    </div>

    <label class="field-label-2" for="AddressZipNew">
      {{ 'customer.addresses.zip' | t }}
    </label>
    <input type="text"
           class="w-input"
           name="address[zip]"
           id="AddressZipNew"
           value="{{ form.zip }}"
           autocapitalize="characters"
           required="">

    <label class="field-label-2" for="AddressPhoneNew">
      {{ 'customer.addresses.phone' | t }}
    </label>
    <input type="tel"
           class="w-input"
           name="address[phone]"
           id="AddressPhoneNew"
           value="{{ form.phone }}"
           pattern="[0-9\-]*"
           required="">

    {{ form.set_as_default_checkbox }}
    <label class="field-label-2" for="address_default_address_new">
      {{ 'customer.addresses.set_default' | t }}
    </label>

    <input type="submit" class="add-address-button w-button" value="{{ 'customer.addresses.add' | t }}">
    <button type="button" class="address-new-toggle cancel-address w-button">
      {{ 'customer.addresses.cancel' | t }}
    </button>

    {% endform %}

  </div>

  <h4>{{ 'customer.addresses.title' | t }}</h4>

  {% for address in customer.addresses %}

    
    <div class="address-box">
      {% if address == customer.default_address %}
        <p><strong>{{ 'customer.addresses.default' | t }}</strong></p>
      {% endif %}
      {{ address | format_address }}
       <button type="button" class="address-edit-toggle" data-form-id="{{ address.id }}">
      {{ 'customer.addresses.edit' | t }}
      </button>
      <button type="button" class="address-delete" data-form-id="{{ address.id }}" data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
        {{ 'customer.addresses.delete' | t }}
      </button>
    </div>
   

    <div id="EditAddress_{{ address.id }}" class="hide">
      {% form 'customer_address', address %}

      <h4>{{ 'customer.addresses.edit_address' | t }}</h4>

      <label for="AddressFirstName_{{ form.id }}"
             class="field-label-2">
        {{ 'customer.addresses.first_name' | t }}
      </label>
      <input type="text"
             class="w-input"
             name="address[first_name]"
             id="AddressFirstName_{{ form.id }}"
             value="{{ form.first_name }}"
             autocapitalize="words">

      <label class="field-label-2" for="AddressLastName_{{ form.id }}">
        {{ 'customer.addresses.last_name' | t }}
      </label>
      <input type="text"
             class="w-input"
             name="address[last_name]"
             id="AddressLastName_{{ form.id }}"
             value="{{ form.last_name }}"
             autocapitalize="words">

      <label class="field-label-2" for="AddressCompany_{{ form.id }}">
        {{ 'customer.addresses.company' | t }}
      </label>
      <input type="text"
             class="w-input"
             name="address[company]"
             id="AddressCompany_{{ form.id }}"
             value="{{ form.company }}"
             autocapitalize="words">

      <label class="field-label-2" for="AddressAddress1_{{ form.id }}">
        {{ 'customer.addresses.address1' | t }}
      </label>
      <input type="text"
             class="w-input"
             name="address[address1]"
             id="AddressAddress1_{{ form.id }}"
             value="{{ form.address1 }}"
             autocapitalize="words">

      <label class="field-label-2" for="AddressAddress2_{{ form.id }}">
        {{ 'customer.addresses.address2' | t }}
      </label>
      <input type="text"
             class="w-input"
             name="address[address2]"
             id="AddressAddress2_{{ form.id }}"
             value="{{ form.address2 }}"
             autocapitalize="words">

      <label class="field-label-2" for="AddressCity_{{ form.id }}">
        {{ 'customer.addresses.city' | t }}
      </label>
      <input type="text"
             class="w-input"
             name="address[city]"
             id="AddressCity_{{ form.id }}"
             value="{{ form.city }}"
             autocapitalize="words">

      <label class="field-label-2" for="AddressCountry_{{ form.id }}">
        {{ 'customer.addresses.country' | t }}
      </label>
      <select
        name="address[country]"
        class="w-select"
        id="AddressCountry_{{ form.id }}"
        class="address-country-option"
        data-form-id="{{ form.id }}"
        data-default="{{ form.country }}">
        {{ country_option_tags }}
      </select>

      <div id="AddressProvinceContainer_{{ form.id }}" style="display: none">
        <label class="field-label-2" for="AddressProvince_{{ form.id }}">
          {{ 'customer.addresses.province' | t }}
        </label>
        <select
          class="w-select"
          name="address[province]"
          id="AddressProvince_{{ form.id }}"
          data-default="{{ form.province }}">
        </select>
      </div>

      <label class="field-label-2" for="AddressZip_{{ form.id }}">
        {{ 'customer.addresses.zip' | t }}
      </label>
      <input type="text"
             class="w-input"
             name="address[zip]"
             id="AddressZip_{{ form.id }}"
             value="{{ form.zip }}"
             autocapitalize="characters">

      <label class="field-label-2" for="AddressPhone_{{ form.id }}">
        {{ 'customer.addresses.phone' | t }}
      </label>
      <input type="tel"
             class="w-input"
             name="address[phone]"
             id="AddressPhone_{{ form.id }}"
             value="{{ form.phone }}"
             pattern="[0-9\-]*">

      {{ form.set_as_default_checkbox }}
      <label for="address_default_address_{{ form.id }}">
        {{ 'customer.addresses.set_default' | t }}
      </label>

      <input type="submit" class="add-address-button w-button" value="{{ 'customer.addresses.update' | t }}">
      <button type="button" class="address-edit-toggle cancel-address w-button" data-form-id="{{ form.id }}">
        {{ 'customer.addresses.cancel' | t }}
      </button>

      {% endform %}

    </div>
  {% endfor %}

    </div>
  </div>
</div>